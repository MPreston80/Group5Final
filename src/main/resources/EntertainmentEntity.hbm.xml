<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.controller.EntertainmentEntity" table="entertainment" schema="qline">
        <id name="identertainment">
            <column name="identertainment" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="website">
            <column name="website" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>